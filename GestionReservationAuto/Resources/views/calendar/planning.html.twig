{%set menu = 'planning' %}

{% extends "src/GestionReservationAuto/Resources/views/layout.html.twig" %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{ baseRoutePrefix }}/libraries/bootstrap-calendar/css/calendar.min.css" rel="stylesheet" />
    <link href="{{ baseRoutePrefix }}/css/modules/gestionReservationAuto/bootstrap-calendar.css" rel="stylesheet" />
{%endblock%}

{% block content %}

    <h3 id="title-planning"></h3>
    <div class="hero-unit">
        <div class="btn-group pull-left">
            <button class="btn btn-primary" data-calendar-nav="prev">&lt;&lt; Précédent</button>
            <button class="btn btn-primary active" data-calendar-nav="today">Maintenant</button>
            <button class="btn btn-primary" data-calendar-nav="next">Suivant &gt;&gt;</button>
        </div>

        <div class="btn-group pull-right">
            <button class="btn btn-primary" data-calendar-view="year">Année</button>
            <button class="btn btn-primary active" data-calendar-view="month">Mois</button>
            <button class="btn btn-primary" data-calendar-view="week">Semaine</button>
            <button class="btn btn-primary" data-calendar-view="day">Jour</button>
        </div>
    </div>    
    <div class="clearfix"></div>

    <div id="calendar"></div>

    <div class="modal fade" id="events-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>Détail de la réservation</h3>
                </div>
                <div class="modal-body" style="height: 400px">
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" class="btn">Fermer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script src="{{ baseRoutePrefix }}/libraries/bootstrap-calendar/js/underscore-min.js" type="text/javascript"></script>
    <script src="{{ baseRoutePrefix }}/libraries/bootstrap-calendar/js/calendar.min.js" type="text/javascript"></script>
    <script src="{{ baseRoutePrefix }}/libraries/bootstrap-calendar/js/language/fr-FR.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {


            var calendar = $('#calendar').calendar({
                language: 'fr-FR',
                modal: "#events-modal",
                tmpl_path: '{{ baseRoutePrefix }}/libraries/bootstrap-calendar/tmpls/',
                events_source: '{{ path('gestion-reservation-auto-calendar-feed') }}',
                onAfterViewLoad: function (view) {
                    $('#title-planning').text(this.getTitle());
                }
            });

            $('.btn-group button[data-calendar-nav]').each(function () {
                var $this = $(this);
                $this.click(function () {
                    calendar.navigate($this.data('calendar-nav'));
                });
            });

            $('.btn-group button[data-calendar-view]').each(function () {
                var $this = $(this);
                $this.click(function () {
                    calendar.view($this.data('calendar-view'));
                });
            });

            $(".btn-group > .btn").click(function () {
                $(this).addClass("active").siblings().removeClass("active");
            });

        });
    </script>
{%endblock%}
