{%set menu = 'Administration' %}

{% extends "src/GestionReservationAuto/Resources/views/layout.html.twig" %}   

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ menu }}</li>
    <li>Ustilisateurs par service</li>
{% endblock %}

{% block content %}
    <h3>Liste des utilisateurs du service</h3>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover" id="myTable">
                <thead>
                <th>RH</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Grade</th>
                <th>Mail</th>
                <th>Périmetre</th>
                <th>Voiture attribuée</th>
                <th></th>
                <th></th>
                </thead>
                {% for use in lesUser %}
                    <tr>
                        <td>{{use.idUser}}</td>
                        <td>{% filter upper %}{{use.nom}}{% endfilter %}</td>
                        <td>{% filter title %}{{use.prenom}}{% endfilter %}</td>
                        <td>{% filter lower  %}{{use.adresse}}{% endfilter %} {{use.cp}} {% filter title %}{{use.ville}}{% endfilter %}</td>
                        <td>{{use.telephone}}</td>
                        <td>{{use.grade}}</td>
                        <td>{{use.sourceAgent.ctcMessagerie}}</td>
                        <td>{{use.perimetre.libelle}}</td>
                        {%if use.voitureAttribue != null%}
                            <td>{{use.voitureAttribue.vehicule.vehImmat}}</td>
                        {%else%}
                            <td></td>
                        {%endif%}
                        <td><a href="{{ path('gestion-reservation-auto-user-update-service', {'id': use.idUser}) }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
                        <td><a href="{{ path('gestion-reservation-auto-user-delete-service', {'id': use.idUser}) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}{# empty Twig template #}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#myTable').DataTable({
                "language": {
                    "url": "{{ baseRoutePrefix }}/i18n/datatables.french.json"
                },
                "order": [[0, "desc"]]
            });

            $(document).on("keyup", ".dataTables_filter input[type=search]", function () {
                var body = $(table.table().body());

                var txtSearchOriginal = this.value;
                var txtSearchRewrite = jQuery.fn.DataTable.ext.type.search.string(txtSearchOriginal);

                table.search(
                        txtSearchRewrite
                        ).draw();

                body.highlight([txtSearchOriginal, txtSearchRewrite]);
            });
        });
    </script>
{%endblock%}
