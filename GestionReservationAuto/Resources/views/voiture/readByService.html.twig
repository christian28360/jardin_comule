{%set menu = 'voiture' %}

{% extends "src/GestionReservationAuto/Resources/views/layout.html.twig" %}



{% block content %}
    <h3>Liste des voitures du service</h3>
    <div class="pull-right">
        <a href="{{ path('gestion-reservation-auto-voiture-create-service') }}"class="btn btn-sm btn-primary">Ajouter Voiture</a>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover" id="myTable">
                <thead>
                <th>#</th>
                <th>Immatriculation</th>
                <th>Modèle</th>
                <th>Commentaire</th>
                <th>Statut</th>
                <th>Modifier</th>
                <th>Supprimer</th>
                </thead>
                {% for voiture in lesVoitures %}
                    <tr>
                        <td>{{voiture.idVoiture}}</td>
                        <td>{% filter upper %}{{voiture.vehicule.vehImmat}}{% endfilter %}</td>
                        <td>{% filter upper %}{{voiture.vehicule.mrqLibelle}}-{{voiture.vehicule.mdlLibelle}}{% endfilter %}</td>
                        <td>{% filter title %}{{voiture.commentaire}}{% endfilter %}</td>
                        <td>{%if voiture.statut == "attribuer" %}
                            attribué
                        {%else%}
                            {{voiture.statut}}
                            {%endif%}
                            </td>
                            <td><a href="{{ path('gestion-reservation-auto-voiture-update-service', {'id': voiture.idVoiture}) }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
                            <td><a href="{{ path('gestion-reservation-auto-voiture-delete-service', {'id': voiture.idVoiture}) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                        </tr>
                        {% endfor %}
                        </table>
                    </div>
                </div>
                {% endblock %}

                    {% block javascripts %}
                        {{parent()}}
                        <script type="text/javascript">
                            $(document).ready(function () {
                                var table = $('#myTable').DataTable({
                                    "language": {
                                        "url": "{{ baseRoutePrefix }}/i18n/datatables.french.json"
                                    },
                                    "order": [[0, "desc"]]
                                });

                                $(document).on("keyup", ".dataTables_filter input[type=search]", function () {
                                    var body = $(table.table().body());

                                    var txtSearchOriginal = this.value;
                                    var txtSearchRewrite = jQuery.fn.DataTable.ext.type.search.string(txtSearchOriginal);

                                    table.search(
                                            txtSearchRewrite
                                            ).draw();

                                    body.highlight([txtSearchOriginal, txtSearchRewrite]);
                                });
                            });
                        </script>
                    {%endblock%}
